#!/bin/bash

if [ -n "$1" ]
then
	sensor=$1
else
	echo "no sensor type defined. usage: plot_calib SensorType [window time]"
fi
if [ -n "$2" ]
then
	T=$2
else
	T=20
fi

echo " ### plotting attitude q_ii w x y z [quat] ###"
echo " ### plotting translation p_ic x y z [m] ###"
echo " ### buffer = " $T "sec"

rxplot $sensor/state_out/data[21]:data[22]:data[23]:data[24]  $sensor/state_out/data[25]:data[26]:data[27] -b $T -t "attitude q_ic & translation p_ic" -l qw,qx,qy,qz,tx,ty,tz 


